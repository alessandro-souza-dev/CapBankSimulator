{
  "name": "diagrama-unifilar-capacitores",
  "version": "2025.01.28",
  "description": "Diagrama Unifilar Interativo - Banco de Capacitores",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "build-mac": "electron-builder --mac",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "package-win": "electron-packager . DiagramaUnifilar --platform=win32 --arch=x64 --out=executavel --overwrite"
  },
  "keywords": [
    "electron",
    "diagrama",
    "capacitores",
    "unifilar",
    "engenharia"
  ],
  "author": "Alessandro",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.alessandro.diagrama-unifilar",
    "productName": "DiagramaUnifilar",
    "directories": {
      "output": "build"
    },
    "files": [
      "index.html",
      "main.js",
      "preload.js",
      "script.js",
      "style.css",
      "bank-selector.js",
      "assets/**/*"
    ],
    "win": {
      "target": "portable",
      "icon": "assets/logo.png"
    }
  }
}
